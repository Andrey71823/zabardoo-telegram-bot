{
  "name": "zabardoo-telegram-bot",
  "version": "1.0.0",
  "description": "Zabardoo Telegram Bot - Coupon and Cashback Platform for India",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon src/index.ts",
    "start:test": "NODE_ENV=test npm run start",
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "cp -r public dist/ && cp -r database dist/",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:dev\"",
    
    "test": "npm run test:all",
    "test:all": "node scripts/run-all-tests.js",
    "test:unit": "jest --config jest.config.js --selectProjects unit",
    "test:integration": "jest --config jest.config.js --selectProjects integration",
    "test:e2e": "jest --config jest.config.js --selectProjects e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "jest --coverage --reporters=default --reporters=jest-html-reporters",
    "test:smoke": "bash scripts/smoke-tests.sh",
    "test:performance": "node scripts/test-performance.js",
    
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    
    "db:migrate": "node scripts/migrate.js",
    "db:migrate:test": "NODE_ENV=test node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "rollback:staging": "bash scripts/rollback.sh staging",
    "rollback:production": "bash scripts/rollback.sh production",
    
    "docker:build": "docker build -t zabardoo/telegram-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    
    "health-check": "node scripts/health-check.js",
    "start-all": "node scripts/start-all-services.js",
    "start:enhanced": "node src/main.ts",
    "start:real": "node scripts/simple-real-bot.js",
    "start:simple": "node scripts/simple-real-bot.js",
    "start:fixed": "node scripts/fixed-menu-bot.js",
    "start:guide": "node scripts/enhanced-guide-bot.js",
    "start:english": "node scripts/english-guide-bot.js",
    "test:guide": "node scripts/test-guide-bot.js",
    "setup:token": "node scripts/setup-bot-token.js",
    "start:demo": "node scripts/start-demo-bot.js",
    "monitor": "node scripts/demo-monitoring-system.js",
    
    "fix:menu": "node scripts/fix-bottom-menu.js",
    "fix:all-menus": "node scripts/fix-all-menus.js",
    "test:english-menu": "node scripts/test-english-menu.js",
    "start:corrected": "node scripts/demo-fixed-menu-bot-corrected.js",
    
    "demo": "node quick-demo.js",
    "demo:enhanced": "node scripts/demo-enhanced-telegram-bot.js",
    "demo:full": "node scripts/demo-full-system.js",
    "demo:all": "node scripts/run-all-demos.js",
    "test:load": "node scripts/load-test.js",
    "test:stress": "node scripts/stress-test.js",
    "test:benchmark": "node scripts/performance-benchmark.js",
    "verify:enhanced": "node scripts/verify-enhanced-system.js",
    
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:scan": "npx audit-ci --moderate",
    
    "clean": "rm -rf dist coverage test-reports node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules",
    "reinstall": "npm run clean:all && npm install",
    
    "precommit": "npm run lint && npm run type-check && npm run test:unit",
    "prepush": "npm run test:integration",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot",
    "coupon",
    "cashback",
    "india",
    "affiliate",
    "marketing",
    "nodejs",
    "typescript"
  ],
  "author": "Zabardoo Team <dev@zabardoo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Andrey7823/zabardoo-telegram-bot.git"
  },
  "bugs": {
    "url": "https://github.com/Andrey7823/zabardoo-telegram-bot/issues"
  },
  "homepage": "https://zabardoo.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "node-telegram-bot-api": "^0.63.0",
    "openai": "^4.0.0",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "cron": "^2.4.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.1.0",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "rate-limiter-flexible": "^3.0.8",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "stripe": "^13.5.0",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.10.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node-telegram-bot-api": "^0.61.7",
    "@types/joi": "^17.2.3",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/cookie-parser": "^1.4.3",
    "@types/express-session": "^1.17.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/nodemailer": "^6.4.9",
    "@types/qrcode": "^1.5.1",
    "@types/pdfkit": "^0.12.9",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "jest": "^29.6.4",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "eslint": "^8.48.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "audit-ci": "^6.6.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "rimraf": "^5.0.1"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check",
      "pre-push": "npm run test:unit"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup/test-setup.ts"
    ]
  }
}